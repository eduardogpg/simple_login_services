<div class="row mt-2">   
    <div class="col">
        <h3>Nuevo usuario</h3>
        <%= form_for @user do |user| %>
            
            <div class="form-group">
                Username:
                <%= user.text_field :username, class:'form-control' %>
            </div>

            <div class="form-group">
                Password:
                <%= user.password_field :password, class:'form-control' %>
            </div>
            
            <input type="submit" value="Crear usuario", class="btn btn-primary">

        <% end %>
    </div>
</div>